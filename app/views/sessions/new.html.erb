<h1>Log in</h1>

<%= form_tag session_path do %>
  
  <div class="row">
    <div class="large-9">
      <div class="row">
        <div class="large-3 columns">
          <!-- <label for="right-label" class="right inline">Label</label> -->
          <%= label_tag :email, class: "right inline" %>
        </div>
        <div class="large-9 columns">
          <!-- <input type="text" id="right-label" placeholder="Inline Text Input"> -->          
          <%= text_field_tag :email, params[:email], placeholder: "Email" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-9">
      <div class="row">
        <div class="large-3 columns">
          <!-- <label for="right-label" class="right inline">Label</label> -->
          <%= label_tag :password, class: "right inline" %>
        </div>
        <div class="large-9 columns">
          <!-- <input type="text" id="right-label" placeholder="Inline Text Input"> -->
          <%= password_field_tag :password %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="actions row">
    <div class="large-5 large-offset-2 columns">
      <%= f.submit "Log In", class: "button round small" %>
    </div>
    
  </div>
<% end %>
